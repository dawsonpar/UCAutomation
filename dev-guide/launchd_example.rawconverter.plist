<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Label</key>
        <string>com.ucagent.rawconverter</string>

        <key>ProgramArguments</key>
        <array>
            <string>/path/to/pyenv</string>
            <string>/path/to/UCAutomation/src/main.py</string>
        </array>

        <key>StartInterval</key>
        <integer>3600</integer>  <!-- Runs every hour -->

        <key>StandardOutPath</key>
        <string>/path/to/UCAutomation/src/lib/rawconverter_out.log</string>

        <key>StandardErrorPath</key>
        <string>/path/to/UCAutomation/src/lib/rawconverter_err.log</string>
        
        <key>EnvironmentVariables</key>
        <dict>
            <key>GOOGLE_CREDENTIALS_PATH</key>
            <string>/path/to/UCAutomation/credentials.json</string>
        </dict>
    </dict>
</plist>